{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build the Debug configuration."
        },
        {
            "label": "CMake Build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build the Release configuration."
        }
    ]
}